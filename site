        // ... scripts inchangés ...
        // Welcome message with time-based greeting
        function getGreeting() {
            const hour = new Date().getHours();
            if (hour < 12) return "Bonjour et bienvenue sur ℂ𝕆𝕄ℙ𝕃𝔼𝕏𝔼 𝟚𝟝 !";
            if (hour < 18) return "Bon après-midi et bienvenue sur ℂ𝕆𝕄ℙ𝕃𝔼𝕏𝔼 𝟚𝟝 !";
            return "Bonsoir et bienvenue sur ℂ𝕆𝕄ℙ𝕃𝔼𝕏𝔼 𝟚𝟝 !";
        }
        document.getElementById('welcomeMsg').textContent = getGreeting();

        // Accordion logic with smooth transition and accessibility
        document.querySelectorAll('.panel').forEach(panel => {
            panel.style.maxHeight = '0';
            panel.style.display = 'block';
        });

        document.querySelectorAll('.accordion').forEach((btn, idx) => {
            btn.addEventListener('click', function() {
                const panel = btn.nextElementSibling;
                const isOpen = panel.classList.contains('show');
                // Close all other panels
                document.querySelectorAll('.panel.show').forEach(p => {
                    if (p !== panel) {
                        p.style.maxHeight = p.scrollHeight + 'px'; // force reflow
                        setTimeout(() => {
                            p.style.maxHeight = '0';
                            p.classList.remove('show');
                            p.previousElementSibling.setAttribute('aria-expanded', 'false');
                        }, 10);
                    }
                });
                if (!isOpen) {
                    panel.classList.add('show');
                    panel.style.maxHeight = panel.scrollHeight + 'px';
                    btn.setAttribute('aria-expanded', 'true');
                } else {
                    panel.style.maxHeight = panel.scrollHeight + 'px'; // force reflow
                    setTimeout(() => {
                        panel.style.maxHeight = '0';
                        panel.classList.remove('show');
                        btn.setAttribute('aria-expanded', 'false');
                    }, 10);
                }
            });
        });

